
	<div class="container">

    <div class="jumbotron">
    <p id="head">Let's Rock</p>
    </div>

      <div id="not-hall-of-fame" class="row">
        <div class="col-md-4 col-md-offset-1">
        <h2>Not Hall of Fame</h2>
        <ul class="list-group">
          {{#each Rock}}
              {{#unless this.hall_of_fame}}
              <li class="list-group-item">
              {{this.id}}. {{this.band_name}}
               <!--    <div class="input-group">
                      <p class="lead"> {{this.band_name}} </p> -->
                      <span class="input-group-btn" action="index/update.{{this.id}}?_method=PUT" method="POST">
                        <form id="band-form">
                          <select class="chosen-select" id="dropdown" name="genre">
                            <option value></option>
                            <option value="rock">Rock</option>
                            <option value="pop">Pop</option>
                            <option value="country">Country</option>
                            <option value="rap">Rap</option>
                          </select>
                            <input type="hidden" name="hall_of_fame" value="true">
                            <button class="btn btn-default" type="submit">Hall of Famer</button>
                            
                        </form>
                  
                        <form action="index/delete/{{this.id}}?_method=DELETE" method="POST">
                          <input type="hidden" name="completed" value="false">
                          <button type="submit">Delete this Band</button>
                       </form>
                    </span>

                  <!-- </div> -->
              </li>
              {{/unless}}
          {{/each}}
        </ul>
      </div>


    <div class="col-md-4 col-md-offset-2">

    <h2>Hall of Fame</h2>
      <div class="panel panel-default">
        <ul class="list-group">
            {{#each Rock}}
                {{#if this.hall_of_fame}}
                    <li class="list-group-item" id="hall-of-fame-li">
                       {{this.id}}. {{this.band_name}} - {{this.Genre.genre}} 
                    </li>
                 {{/if}}
            {{/each}}
        </ul>
      </div>
    </div>
  </div>


<div class="col-md-8">
<h2>Add a Band</h2>
<form class="create-update-form" action="index/create" method="POST">
<p id="add">Click if you think this band belongs in the Hall of Fame</p>


  <div class="form-group">
    <textarea class="form-control input" type="text" name="band_name" placeholder="Enter New Band"></textarea>
  </div>

  <button class="btn btn-default" type="submit">Add Band</button>
</form>
</div>
	
	</body>
</html>